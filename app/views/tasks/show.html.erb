<div class="container p-2 col-6">
  <div class="d-inline-flex align-item-center mb-2">
    <h2><%= @task.title %></h2>
    <div class="m-2">
      <%= link_to task_edit_path do %>
        <i class="fa-solid fa-pen-to-square"></i>
      <% end %>
    </div>
  </div>

  <div class="border rounded border-primary m-1 p-1 mb-2 w-100">
    <p class='m-0'><%= @task.details %></p>
  </div>


  <div class="d-inline-flex align-item-center mb-2">
    <input type="checkbox" <%= 'checked' if @task.completed == true%>>
    <p style="margin: 0;">This task is completed</p>
  </div>

  <div class="text-center">
    <%= link_to tasks_path do %>
      <button class="btn btn-primary">Back</button>
    <% end %>
  </div>
</div>
